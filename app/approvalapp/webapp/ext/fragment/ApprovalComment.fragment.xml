<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<VBox id="_IDGenVBox" core:require="{ handler: 'approvalapp/ext/fragment/ApprovalComment'}">
		<HBox id="commentsFragment-ViewAllHBox" justifyContent="End">
            <Button
                id="_IDGenButton1"
                text="Previous comments"
                icon="sap-icon://comment"
                type="Transparent"
                press="handler.onOpenComments"/>
        </HBox>
 
        <TextArea
            id="commentsFragment-CommentTextArea"
            rows="5"
            width="100%"
            placeholder="Enter your comment..."
            />
 
	</VBox>
</core:FragmentDefinition>